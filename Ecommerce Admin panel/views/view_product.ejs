<%- include('header')%>

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>View Admin</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Tables</li>
                    <li class="breadcrumb-item active">View Admin</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">View Admin</h5>
                            <form action="">
                                <input type="text" name="search" value="<%=search%>">
                                <input type="submit" value="Search">
                            </form>
                            <form action="/admin/product/DeleteAllProduct" method="post">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>

                                                <button class="item" type="submit" data-toggle="tooltip"
                                                    data-placement="top" title="Delete" style="margin-left: -8px;">
                                                    <a href="#"><i class="ri-delete-bin-5-line"></i></a>
                                                </button>

                                                <label class="au-checkbox">
                                                    <input type="checkbox" id="Allchechbox">
                                                    <span class="au-checkmark"></span>

                                                </label>
                                            </th>
                                            <th>Category Name</th>
                                            <th>Subcate Name</th>
                                            <th>ExtraCategory Name</th>
                                            <th>Brand Name</th>
                                            <th>Type Name</th>
                                            <th>Product Title</th>
                                            <th>Product Price</th>
                                            <th>Product Old Price</th>
                                            <th>Select Color</th>
                                            <th>Select Size</th>
                                            <th>Description</th>
                                            <th>Upload Image</th>
                                            <th>Upload Multipal Image</th>
                                            <th>status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%if(PData!= '' ){%>
                                            <% for (let pd of PData){%>
                                                <tr>
                                                    <td>
                                                        <label class="au-checkbox">
                                                            <input type="checkbox" class="checkBoxClass"
                                                                value="<%=pd._id%>" name="deleteAll[]">
                                                            <span class="au-checkmark"></span>
                                                        </label>
                                                    </td>
                                                    <td>
                                                        <%=pd.category_name.category_name%>
                                                    </td>
                                                    <td>
                                                        <%=pd.extra_subcate_name.subcate_name%>
                                                    </td>
                                                    <td>
                                                        <%=pd.extra_name.extra_name%>
                                                    </td>
                                                    <td>
                                                        <%=pd.brand_name.brand_name%>
                                                    </td>
                                                    <td>
                                                        <%=pd.type_name.type_name%>
                                                    </td>
                                                    <td>
                                                        <%=pd.title%>
                                                    </td>
                                                    <td>
                                                        <%=pd.price%>
                                                    </td>
                                                    <td>
                                                        <%=pd.oldprice%>
                                                    </td>
                                                    <td>
                                                        <%=pd.color%>
                                                    </td>
                                                    <td>
                                                        <%=pd.size%>
                                                    </td>
                                                    <td>
                                                        <%=pd.description%>
                                                    </td>
                                                    <td>
                                                        <img src="<%=pd.Product_single_image%>" height="50">
                                                    </td>
                                                    <td>
                                                        <% pd.Product_multi_image.map((v,i)=>{ %>

                                                            <img src="<%= v %>" height="50">
                                                            <% }) %>
                                                    </td>
                                                    <td>
                                                        <%if(pd.isActive){%>
                                                            <a href="/admin/product/activeproduct/<%=pd.id%>"
                                                                class="btn btn-success">Active</a>
                                                            <%} else{%>
                                                                <a href="/admin/product/deactiveproduct/<%=pd.id%>"
                                                                    class="btn btn-danger">DeActive</a>
                                                                <%}%>
                                                    </td>
                                                    <td>
                                                        <div class="table-data-feature">
                                                            <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Edit" type="button">
                                                                <a href="/admin/product/updateproduct/<%=pd.id%>"><i
                                                                        class="ri-edit-2-fill"></i></a>
                                                            </button>
                                                            <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Delete" type="button">
                                                                <a href="/admin/product/deteleproduct/<%=pd.id%>"><i
                                                                        class="ri-delete-bin-5-line"></i></a>
                                                            </button>

                                                        </div>
                                                    </td>
                                                </tr>
                                                <%}} else {%>
                                                    <tr>
                                                        <td colspan="10">Not Record Found </td>
                                                    </tr>
                                                    <%}%>
                                                        <tr>
                                                            <td colspan="10" align="center">
                                                                <% var prevpage=parseInt(currentpage)-1%>
                                                                    <%if(prevpage>=0){%>
                                                                        <a href="?page=<%=prevpage%>"
                                                                            class="btn btn-primary btn-sm ">Prev</a>
                                                                        <%}%>


                                                                            <a href="?page=<%=currentpage%>">
                                                                                <%=parseInt(currentpage)+1%>
                                                                            </a>
                                                                            <% var nextpage=parseInt(currentpage)+1%>
                                                                                <%if(totalDocument> nextpage){%>
                                                                                    <a href="?page=<%=nextpage%>"
                                                                                        class="btn btn-primary btn-sm ">Next</a>
                                                                                    <%}%>

                                                            </td>
                                                        </tr>
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main><!-- End #main -->
    <%- include('footer')%>

        <script>
            $(document).ready(function () {
                $("#Allchechbox").click(function () {
                    $(".checkBoxClass").prop('checked', $(this).prop('checked'));
                });
            });
        </script>