<%- include('header')%>

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>View Admin</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Tables</li>
                    <li class="breadcrumb-item active">View Admin</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">View Admin</h5>
                            <form action="">
                                <input type="text" name="search" value="<%=search%>">
                                <input type="submit" value="Search">
                            </form>
                            <form action="/admin/DeleteAllRecord" method="post">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                <label class="au-checkbox">
                                                    <input type="checkbox" id="Allchechbox">
                                                    <span class="au-checkmark"></span>

                                                    <button class="item" type="submit" data-toggle="tooltip"
                                                        data-placement="top" title="Delete">
                                                        <a href="#"><i class="ri-delete-bin-5-line"></i></a>
                                                    </button>
                                                </label>
                                            </th>

                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>description</th>
                                            <th>Gender</th>
                                            <th>Hobby</th>
                                            <th>City</th>
                                            <th>Image</th>
                                            <th>status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%if(AData!= '' ){%>
                                            <% for (let ab of AData){%>
                                                <tr>
                                                    <td>
                                                        <label class="au-checkbox">
                                                            <input type="checkbox" class="checkBoxClass"
                                                                value="<%=ab._id%>" name="deleteAll[]">
                                                            <span class="au-checkmark"></span>
                                                        </label> 
                                                    </td>
                                                    <td>
                                                        <%=ab.name%>
                                                    </td>
                                                    <td>
                                                        <%=ab.email%>
                                                    </td>
                                                    <td>
                                                        <%=ab.description%>
                                                    </td>
                                                    <td>
                                                        <%=ab.gender%>
                                                    </td>
                                                    <td>
                                                        <%=ab.hobby%>
                                                    </td>
                                                    <td>
                                                        <%=ab.city%>
                                                    </td>
                                                    <td> <img src="<%=ab.AdminImage%>" height="50"> </td>
                                                    <td>
                                                        <%if(ab.isActive){%>
                                                            <a href="/admin/activedata/<%=ab.id%>"
                                                                class="btn btn-success">Active</a>
                                                            <%} else{%>
                                                                <a href="/admin/deactivedata/<%=ab.id%>"
                                                                    class="btn btn-danger">DeActive</a>
                                                                <%}%>
                                                    </td>
                                                    <td>
                                                        <div class="table-data-feature">
                                                            <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Edit" type="button">
                                                                <a href="/admin/updateadmindata/<%=ab.id%>"><i
                                                                        class="ri-edit-2-fill"></i></a>
                                                            </button>
                                                            <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Delete" type="button">
                                                                <a href="/admin/delelerecord/<%=ab.id%>"><i
                                                                        class="ri-delete-bin-5-line"></i></a>
                                                            </button>

                                                        </div>
                                                    </td>
                                                </tr>
                                                <%}} else {%>
                                                    <tr>
                                                        <td colspan="10">Not Record Found </td>
                                                    </tr>
                                                    <%}%>
                                                        <tr>
                                                            <td colspan="10" align="center">
                                                                <% var prevpage=parseInt(currentpage)-1%>
                                                                    <%if(prevpage>=0){%>
                                                                        <a href="?page=<%=prevpage%>"
                                                                            class="btn btn-primary btn-sm ">Prev</a>
                                                                        <%}%>


                                                                            <a href="?page=<%=currentpage%>">
                                                                                <%=parseInt(currentpage)+1%>
                                                                            </a>
                                                                            <% var nextpage=parseInt(currentpage)+1%>
                                                                                <%if(totalDocument> nextpage){%>
                                                                                    <a href="?page=<%=nextpage%>"
                                                                                        class="btn btn-primary btn-sm ">Next</a>
                                                                                    <%}%>

                                                            </td>
                                                        </tr>
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main><!-- End #main -->
    <%- include('footer')%>

        <script>
            $(document).ready(function () {
                $("#Allchechbox").click(function () {
                    $(".checkBoxClass").prop('checked', $(this).prop('checked'));
                });
            });
        </script>