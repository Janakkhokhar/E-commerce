<%-include('header')%>

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Add ExtraCategory</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Forms</li>
                    <li class="breadcrumb-item active">ExtraCategory</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Add Form </h5>

                            <!-- General Form Elements -->
                            <form method="post" action="/admin/extra/ExtraCategoryData">

                                <div class="row mb-3">
                                    <label for="select" class="col-sm-2 col-form-label">Extra Category</label>
                                    <div class="col-sm-10">
                                        <select name="category_name"   id="categoryId" onchange="return getsubcategoryData()" class="form-control">
                                            <option value="">-- Extra Category -- </option>
                                            <%for(var sd of catRecord){%>
                                                <option value="<%=sd.id%>">
                                                    <%=sd.category_name%>
                                                </option>
                                                <%}%>
                                        </select>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="select" class="col-sm-2 col-form-label">Extra SubCategory</label>
                                    <div class="col-sm-10">
                                        <select name="extra_subcate_name" id="subcategoryId" class="form-control">
                                            <option value="">-- Extra SubCategory -- </option>
                                            <%for(var sub of subcatRecord){%>
                                                <option value="<%=sub.id%>">
                                                    <%=sub.subcate_name%>
                                                </option>
                                                <%}%>
                                        </select>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="select" class="col-sm-2 col-form-label">Extra Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="extra_name">
                                    </div>
                                </div>


                                <div class="row mb-3">
                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-primary btn-sm"> Submit
                                        </button>
                                        <button type="reset" class="btn btn-danger btn-sm"> Reset
                                        </button>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>

                </div>


            </div>
        </section>

    </main><!-- End #main -->

    <%-include('footer')%>